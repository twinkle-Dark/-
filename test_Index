      // 取得前台展示網址變數
    var frontendUrl = "<?= urlF ?>"; // Apps Script 傳入的前台展示網址
    
    // 綁定前台展示按鈕事件，開啟網址
    document.getElementById("frontendLink").addEventListener("click", function() {
        window.open(frontendUrl, "_blank"); // 在新分頁開啟網址
    });  
    
    
    
    </script>
</body>
</html>